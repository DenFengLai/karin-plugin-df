{
  "release-type": "node",
  "pull-request-title-pattern": "🚀 build${scope}: release${component} ${version}",
  "extra-commit-parser": {
    "headerPattern": "^(?:[\\p{Emoji}\\p{Extended_Pictographic}]+\\s*)?(?<type>feat|fix|chore|build|docs|style|refactor|test|perf)(?:\\((?<scope>[^)]+)\\))?: (?<description>.+)$",
    "headerCorrespondence": [
      "type",
      "scope",
      "description"
    ]
  },
  "changelog-sections": [
    {
      "type": "feat",
      "section": "✨ Features",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "🐛 Bug Fixes",
      "hidden": false
    },
    {
      "type": "docs",
      "section": "📝 Documentation",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "🔧 Chores",
      "hidden": false
    },
    {
      "type": "build",
      "section": "📦 Build",
      "hidden": false
    },
    {
      "type": "refactor",
      "section": "♻️ Refactor",
      "hidden": false
    },
    {
      "type": "test",
      "section": "✅ Tests",
      "hidden": false
    }
  ]
}